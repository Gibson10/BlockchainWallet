<% include partials/header %>


<div class="container pt-3 mt-5">
    
    <% if(success && success.length > 0){ %>
        <div class="mt-3 alert alert-success alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong>Woo Hoo!</strong> <%= success %>
        </div>
    <% } %>
    <% if(error && error.length > 0){ %>
        <div class="mt-3 alert alert-danger alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong>Bummer!</strong> <%= error %>
        </div>
    <% } %>
    
    <div class="row">
        <div class="col-md-12">
                        
            <!--Section: Blog -->
            <section class="py-4 text-center text-lg-left">

                <!--Section heading-->
                <h1 class="h1 font-bold text-center mb-5 pt-4">Latest News</h1>
                
                <% articles.forEach(function(article, i) { %>
                
                    <% if(i == 0) { %>
                        
                        <!--Grid row-->
                        <div class="row">

                        <!--Grid column-->
                        <div class="col-lg-5 col-xl-5 pb-3">
                            <!--Featured image-->
                            <div class="view overlay hm-white-slight rounded z-depth-2">
                            <img style="height : 280px !important; max-width:100% !important; min-width:100% !important; object-fit: cover !important;" src="<%=article.image%>" alt="Sample image for first version of blog listing"
                                class="img-fluid">
                            <a>
                                <div class="mask"></div>
                            </a>
                            </div>
                        </div>
                        <!--Grid column-->

                        <!--Grid column-->
                        <div class="col-lg-7 col-xl-7">
                            <!--Excerpt-->
                            <a href="" class="green-text">
                            <h6 class="font-bold pb-1">
                                <i class="fa fa-btc"></i> Blockchain</h6>
                            </a>
                            <h3 class="mb-4 font-bold dark-grey-text">
                            <strong><%=article.subject%></strong>
                            </h3>
                            <p><%=article.article%></p>
                            <p>by
                            <a>
                                <strong><%=article.name%></strong>
                            </a>, <%=moment(article.date).fromNow()%></p>
                            <a href="<%=article.url%>" target="_blank" class="btn btn-success btn-md mb-3">Read more</a>
                        </div>
                        <!--Grid column-->

                        </div>
                        <!--Grid row-->

                        <hr class="mb-5 mt-5 pb-3">
                
                    <% } else if (i % 2 == 0) { %>
                
                        <!--Grid row-->
                        <div class="row">

                        <!--Grid column-->
                        <div class="col-lg-5 col-xl-5 pb-3">
                            <!--Featured image-->
                            <div class="view overlay hm-white-slight rounded z-depth-2">
                            <img style="height : 280px !important; max-width:100% !important; min-width:100% !important; object-fit: cover !important;" src="<%=article.image%>" alt="Sample image for first version of blog listing"
                                class="img-fluid">
                            <a>
                                <div class="mask"></div>
                            </a>
                            </div>
                        </div>
                        <!--Grid column-->

                        <!--Grid column-->
                        <div class="col-lg-7 col-xl-7">
                            <!--Excerpt-->
                            <a href="" class="green-text">
                            <h6 class="font-bold pb-1">
                                <i class="fa fa-btc"></i> Blockchain</h6>
                            </a>
                            <h3 class="mb-4 font-bold dark-grey-text">
                            <strong><%=article.subject%></strong>
                            </h3>
                            <p><%=article.article%></p>
                            <p>by
                            <a>
                                <strong><%=article.name%></strong>
                            </a>, <%=moment(article.date).fromNow()%></p>
                            <a href="<%=article.url%>" target="_blank" class="btn btn-success btn-md mb-3">Read more</a>
                        </div>
                        <!--Grid column-->

                        </div>
                        <!--Grid row-->

                        <hr class="mb-5 mt-4 pb-3">
                
                    <% } else { %>
                
                        <!--Grid row-->
                        <div class="row">

                        <!--Grid column-->
                        <div class="col-lg-7 col-xl-7 pb-3">
                            <!--Excerpt-->
                            <a href="" class="pink-text">
                            <h6 class="font-bold pb-1">
                                <i class="fa fa-btc"></i> Blockchain</h6>
                            </a>
                            <h3 class="mb-4 font-bold dark-grey-text">
                            <strong><%=article.subject%></strong>
                            </h3>
                            <p><%=article.article%></p>
                            <p>by
                            <a>
                                <strong><%=article.name%></strong>
                            </a>, <%=moment(article.date).fromNow()%></p>
                            <a href="<%=article.url%>" target="_blank" class="btn btn-pink btn-md mb-3">Read more</a>
                        </div>
                        <!--Grid column-->

                        <!--Grid column-->
                        <div class="col-lg-5 col-xl-5 mb-5">
                            <!--Featured image-->
                            <div class="view overlay hm-white-slight rounded z-depth-2">
                            <img style="height : 280px !important; max-width:100% !important; min-width:100% !important; object-fit: cover !important;"  src="<%=article.image%>" alt="Second image in the first version of blog listing"
                                class="img-fluid">
                            <a>
                                <div class="mask"></div>
                            </a>
                            </div>
                        </div>
                        <!--Grid column-->

                        </div>
                        <!--Grid row-->

                        <hr class="mb-5 mt-4 pb-3"> %>
                
                    <% } %>    
                
                <% }) %>

            </section>
            <!--Section: Blog -->
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

<% include partials/footer %>